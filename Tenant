    # è¿”å›æŒ‰é’®ç‚¹å‡»äº‹ä»¶
    def on_back_click(self):
        # éšè—æ”¯ä»˜ç•Œé¢
        self.central_frame.pack_forget()
        self.payment_frame.pack_forget()

        # é‡æ–°æ˜¾ç¤ºæŒ‰é’®å’Œè§†é¢‘æ¡†æ¶
