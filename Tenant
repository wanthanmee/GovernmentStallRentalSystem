        logout_button = tk.Button(self.inner_frame, text="Log Out", font=("Arial", 16), width=12, command=self.log_out)
        logout_button.grid(row=0, column=5, padx=20, pady=10)

    def log_out(self):
        self.root.destroy()  # å…³é—­å½“å‰çª—å£
        root.deiconify()  # æ¢å¤ä¸»çª—å£æ˜¾ç¤º
        show_login_frame()  # æ˜¾ç¤ºç™»å½•é¡µé¢

    def create_video_frame(self):
        self.video_frame = tk.Frame(self.root, bg="orange")
        self.video_frame.pack(fill=tk.BOTH, expand=True)

        # Create canvas for video
        self.canvas = tk.Canvas(self.video_frame, 
                              width=self.root.winfo_screenwidth(),
                              height=self.root.winfo_screenheight())
        self.canvas.pack(fill=tk.BOTH, expand=True)

        # Start video playback
        self.play_video()

    def play_video(self):
        if hasattr(self, 'cap') and self.cap.isOpened():
            ret, frame = self.cap.read()
            if ret:
                # Resize frame to fit window
                frame = cv2.resize(frame, 
                                 (self.root.winfo_screenwidth(),
                                  self.root.winfo_screenheight()))
                
                # Convert frame from BGR to RGB
                frame = cv2.cvtColor(frame, cv2.COLOR_BGR2RGB)
                
                # Convert to PhotoImage
                image = Image.fromarray(frame)
                self.photo = ImageTk.PhotoImage(image=image)
                
                # Update canvas
                self.canvas.create_image(0, 0, image=self.photo, anchor=tk.NW)
                
                # Schedule next frame
                self.root.after(20, self.play_video)
            else:
                # Reset video to beginning if it ends
                self.cap.set(cv2.CAP_PROP_POS_FRAMES, 0)
                self.play_video()

    def __del__(self):
        # Release video capture when object is destroyed
        if hasattr(self, 'cap'):
            self.cap.release()

