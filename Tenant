IC_NUMBER_REGISTER = StringVar()
GENDER = StringVar()
PHONE_NUMBER = StringVar()
EMAIL_ADDRESS = StringVar()
PASSWORD_REGISTER = StringVar()
CONFIRM_PASSWORD = StringVar()

conn = None  # connection to database
cursor = None  # use to execute the SQL queries and fetch results from db

login_profile = {}


# Connect to database and create table if it doesn't exist

def Database():
    global conn, cursor
    conn = sqlite3.connect("Government_Rental_System.db")
    cursor = conn.cursor()
    cursor.execute("PRAGMA busy_timeout = 5000")  # 5ç§’ç­‰å¾…æ—¶é—´

    cursor.execute(
        """CREATE TABLE IF NOT EXISTS Tenant (
            Tenant_id INTEGER PRIMARY KEY AUTOINCREMENT NOT NULL, 
            Username TEXT NOT NULL, 
            IC_Number TEXT NOT NULL CHECK(LENGTH(IC_Number) = 12),  
            Gender TEXT NOT NULL, 
            Phone_Number TEXT NOT NULL CHECK(LENGTH(Phone_Number) <= 11), 
            Email_Address TEXT NOT NULL CHECK(LENGTH(Email_Address) <= 100), 
            Password TEXT NOT NULL CHECK(LENGTH(Password) >= 8)
        )"""
    )

    cursor.execute(
        """CREATE TABLE IF NOT EXISTS Stall (
            Stall_ID INTEGER PRIMARY KEY AUTOINCREMENT NOT NULL, 
            Status INTEGER DEFAULT 0,  
            Stall_Address TEXT NOT NULL,  
            Postcode INTEGER NOT NULL, 
            Tenant_id INTEGER NOT NULL,  
            Username TEXT NOT NULL, 
            Rental_Period INTEGER NOT NULL,
            Contract_Start_Date TEXT,
            Contract_End_Date TEXT,
            Rental_Amount REAL,
            Renewal_Status TEXT,
            Deposit_Amount REAL,
            Last_Payment_Date TEXT,
            FOREIGN KEY (Tenant_id) REFERENCES Tenant (Tenant_id),
            FOREIGN KEY (Username) REFERENCES Tenant (Username)  
        )"""
    )

    cursor.execute(
        """CREATE TABLE IF NOT EXISTS Payment (
            Payment_ID INTEGER PRIMARY KEY AUTOINCREMENT NOT NULL, 
            Transaction_Date DATE NOT NULL,
            Tenant_id INTEGER NOT NULL, 
            Rental_Amount REAL,
            Reference_No INTEGER NOT NULL, 
            Remark TEXT NOT NULL,  
            Upload_Slip TEXT NOT NULL,
            FOREIGN KEY (Tenant_id) REFERENCES Tenant (Tenant_id),
            FOREIGN KEY (Rental_Amount) REFERENCES Stall (Rental_Amount)  
        )"""
    )

    cursor.execute('''CREATE TABLE IF NOT EXISTS FaceEmbeddings 
                 (Face_id INTEGER PRIMARY KEY, 
                  Tenant_id INTEGER,
                  name TEXT, 
                  embedding BLOB,
                  faceImagePath TEXT,
                  FOREIGN KEY (Tenant_id) REFERENCES Tenant (Tenant_id))''')
    cursor.execute(
        '''CREATE TABLE IF NOT EXISTS Attendance (
            Attendance_id INTEGER PRIMARY KEY, 
            Tenant_id INTEGER, 
            name TEXT, 
            date TEXT, 
            clock_in_time TEXT, 
            clock_out_time TEXT, 
            Clock_In_longitude REAL,
            Clock_In_latitude REAL,
            Clock_Out_longitude REAL,
            Clock_Out_latitude REAL,
            FOREIGN KEY (Tenant_id) REFERENCES Tenant (Tenant_id))''')
    conn.commit()


@app.route('/')
def index():
    return render_template('live_location.html')


def open_browser():
    webbrowser.open_new('http://127.0.0.1:5000')


def start_flask():
    threading.Thread(target=app.run, kwargs={'debug': True, 'use_reloader': False}).start()
    threading.Timer(1, open_browser).start()


############################################# FUNCTIONS ################################################

def assure_path_exists(path):
    dir = os.path.dirname(path)
    if not os.path.exists(dir):
        os.makedirs(dir)


##################################################################################

def tick():
    time_string = time.strftime('%H:%M:%S')
    clock.config(text=time_string)
    clock.after(200, tick)


