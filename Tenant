# è§†é¢‘èƒŒæ™¯ç±»
class VideoApp:
    def __init__(self, root, video_path, duration=20):
        self.root = root
        self.video_path = video_path
        self.duration = duration

        # è·å–å±å¹•å°ºå¯¸å¹¶è®¾ç½®å…¨å±
        self.screen_width = self.root.winfo_screenwidth()
        self.screen_height = self.root.winfo_screenheight()
        self.root.geometry(f"{self.screen_width}x{self.screen_height}")

        # æ‰“å¼€è§†é¢‘æ–‡ä»¶
        self.cap = cv2.VideoCapture(self.video_path)

        if not self.cap.isOpened():
            print("Error: æ— æ³•æ‰“å¼€è§†é¢‘æ–‡ä»¶ã€‚")
            return

        # åˆ›å»ºä¸€ä¸ªCanvasæ¥æ˜¾ç¤ºè§†é¢‘å¸§
        self.canvas = tk.Canvas(self.root, width=self.screen_width, height=self.screen_height)
        self.canvas.pack(fill=tk.BOTH, expand=True)

        # ç”¨äºå­˜å‚¨å›¾åƒçš„å¼•ç”¨ï¼Œé¿å…è¢«åƒåœ¾å›æ”¶
        self.tk_image = None

        # å¯åŠ¨è§†é¢‘æ’­æ”¾
        self.play_video()

    def play_video(self):
        ret, frame = self.cap.read()

        if ret:
            # è°ƒæ•´è§†é¢‘å¸§å¤§å°ä»¥é€‚åº”çª—å£å¤§å°
            frame = cv2.resize(frame, (self.screen_width, self.screen_height))

            # è½¬æ¢é¢œè‰² BGR -> RGBï¼ˆPILå’ŒTkinterä½¿ç”¨RGBæ ¼å¼ï¼‰
            frame = cv2.cvtColor(frame, cv2.COLOR_BGR2RGB)

            # è½¬æ¢ä¸ºPILå›¾åƒ
            image = Image.fromarray(frame)

            # è½¬æ¢ä¸ºImageTkå¯¹è±¡
            self.tk_image = ImageTk.PhotoImage(image)

            # æ¸…é™¤å…ˆå‰çš„å›¾åƒ
            self.canvas.delete("all")

            # åœ¨Canvasä¸Šæ˜¾ç¤ºå›¾åƒ
            self.canvas.create_image(0, 0, anchor=tk.NW, image=self.tk_image)

            # åœ¨æŒ‡å®šçš„æŒç»­æ—¶é—´åè°ƒç”¨è‡ªèº«ä»¥ç»§ç»­æ’­æ”¾
            self.root.after(int(self.duration), self.play_video)
        else:
            # å¦‚æœè§†é¢‘æ’­æ”¾å®Œæ¯•ï¼Œé‡å¤´å¼€å§‹æ’­æ”¾
            self.cap.set(cv2.CAP_PROP_POS_FRAMES, 0)
            self.play_video()


class RentalSystemApp:
    def __init__(self, root):
        self.root = root
        self.root.title("Main")
        self.root.geometry("1920x1080")
        self.root.state("zoomed")

        # Initialize video capture first
        self.video_path = "C:/Kai Shuang/BAYAN LEPAS.mp4"  # Update this path
        self.cap = cv2.VideoCapture(self.video_path)
        
        if not self.cap.isOpened():
            print("Error: Cannot open video file.")
            return

        # Load images
        self.profile_image_original = Image.open("C:/Kai Shuang/profile_logo.png")
        self.profile_image_resized = self.profile_image_original.resize((32, 32))
        self.profile_image = ImageTk.PhotoImage(self.profile_image_resized)

        self.maybank_logo_original = Image.open("C:/Kai Shuang/Maybank-Logo.png")
        self.maybank_logo_resized = self.maybank_logo_original.resize((80, 55))
        self.maybank_logo = ImageTk.PhotoImage(self.maybank_logo_resized)

        self.hsbc_logo_original = Image.open("C:/Kai Shuang/hsbc-logo.png")
        self.hsbc_logo_resized = self.hsbc_logo_original.resize((80, 50))
        self.hsbc_logo = ImageTk.PhotoImage(self.hsbc_logo_resized)

        self.create_widgets()

    def create_widgets(self):
        # åˆ›å»ºé¡¶éƒ¨å¸ƒå±€
        self.create_top_bar()

        # åˆ›å»ºä¸­é—´æŒ‰é’®éƒ¨åˆ†
        self.create_buttons()

        # åˆ›å»ºè§†é¢‘æ¡†éƒ¨åˆ†
        self.create_video_frame()

    # åˆ›å»ºé¡¶éƒ¨æ 
    def create_top_bar(self):
        self.top_frame = tk.Frame(self.root, bg="orange", height=100)
        self.top_frame.pack(fill=tk.X)

        # å·¦ä¾§å›¾æ ‡
        logo = tk.Label(self.top_frame, text="ğŸ›", font=("Arial", 32), bg="orange", fg="white")
        logo.pack(side=tk.LEFT, padx=10)

        # ä¸­é—´æ ‡é¢˜ (ä½¿ç”¨expand=Trueå°†å…¶å±…ä¸­å¯¹é½)
        title = tk.Label(self.top_frame, text="Government Rental System", font=("Arial", 24), bg="orange", fg="white")
        title.pack(side=tk.LEFT, padx=10, expand=True, fill=tk.X)

        # å³ä¾§ Profile æŒ‰é’®ï¼ˆå¸¦å›¾æ ‡ï¼‰
        profile_button = tk.Button(self.top_frame, image=self.profile_image, relief="solid",
                                   command=self.on_profile_click)
        profile_button.pack(side=tk.LEFT, padx=10)


    # åˆ›å»ºå››ä¸ªæŒ‰é’®
    def create_buttons(self):
        self.buttons_frame = tk.Frame(self.root, bg="yellow")
        self.buttons_frame.pack(fill=tk.X)

        # æ–°çš„å†…éƒ¨æ¡†æ¶æ¥å±…ä¸­æŒ‰é’®
        self.inner_frame = tk.Frame(self.buttons_frame, bg="yellow")
        self.inner_frame.pack(pady=20)

        # å››ä¸ªä¸»è¦æŒ‰é’®å±…ä¸­å¯¹é½
        attendance_button = tk.Button(self.inner_frame, text="Attendance", font=("Arial", 16), width=12,
