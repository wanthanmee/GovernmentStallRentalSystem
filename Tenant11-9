                        fg="black", bg="alice blue",
                        width=55, height=1, font=('comic', 29, ' bold '))
    message3.place(x=80, y=10)

    datef = tk.Label(frame4, text=day + "-" + mont[month] + "-" + year + "  |  ", fg="grey", bg="alice blue", width=60,
                     height=1, font=('comic', 22, ' bold '))
