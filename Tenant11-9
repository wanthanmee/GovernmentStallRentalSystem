    def stall_log_out(self):
        self.stall_frame.pack_forget()
        self.upload_stall_frame.pack_forget()

        # ÈáçÊñ∞ÊòæÁ§∫ÊåâÈíÆÂíåËßÜÈ¢ëÊ°ÜÊû∂
