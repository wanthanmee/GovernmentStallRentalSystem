def show_register_frame():
    for widget in root.winfo_children():
        if isinstance(widget, tk.Frame):  # ‰øùÁïôËßÜÈ¢ëËÉåÊôØ
            widget.destroy()

    frame = Frame(root, padx=20, pady=50)
    frame.place(relx=0.5, rely=0.5, anchor=tk.CENTER)  # Â±Ö‰∏≠ÊòæÁ§∫
